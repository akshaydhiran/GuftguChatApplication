<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_image"
        >

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/reciver_message_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/message_profile_image_id"
        android:background="@drawable/receiver_message_layout"
        android:text="receiver message here"
        android:padding="10dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/message_sender_imageView_id"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/sender_messages_layout"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/message_receiver_imageView_id"
        android:layout_width="150dp"
        android:background="@drawable/receiver_message_layout"
        android:padding="10dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/sender_message_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/reciver_message_text_id"
        android:background="@drawable/sender_messages_layout"
        android:text="sender messages"
        android:textSize="16sp"
        android:padding="10dp"
        android:textStyle="bold"
        />


</RelativeLayout>