<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="17dp"

    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_number_input_EditText_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/phone_icon"
        android:hint="Enter your Mobile Number"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="3dp" />


    <EditText
        android:id="@+id/verification_code_input_EditText_Id"
        android:visibility="invisible"
        android:layout_below="@+id/phone_number_input_EditText_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/password_icon"
        android:hint="Enter your verification code here...."
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp" />

    <Button
        android:id="@+id/send_verCode_button_Id"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_code_input_EditText_Id"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="52dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/buttons"
        android:text=" send verification code "
        android:textColor="@color/colorAccent"
        android:textSize="21sp" />

    <Button
        android:id="@+id/verify_button_Id"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_verCode_button_Id"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="52dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/buttons"
        android:text=" Verify "
        android:textColor="@color/colorAccent"
        android:visibility="invisible"
        android:textSize="21sp" />

</RelativeLayout>