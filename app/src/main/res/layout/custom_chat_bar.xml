<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_profile_image_Id"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/profile_image"
        android:cropToPadding="true"
        android:layout_marginRight="10dp"/>

    <TextView

        android:id="@+id/custom_profile_name_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Display user name"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView

        android:id="@+id/custom_user_last_scene_Id"
        android:layout_below="@+id/custom_profile_name_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="last scene"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:textSize="16sp"
        />

</RelativeLayout>